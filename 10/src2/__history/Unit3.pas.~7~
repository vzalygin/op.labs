unit Unit3;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TFindForm = class(TForm)
    FindButton: TButton;
    Button1: TButton;
    LastNameInput: TEdit;
    Фамилия: TLabel;
    NameInput: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    PhoneInput: TEdit;
    AddrInput: TEdit;
    procedure Button1Click(Sender: TObject);
    procedure FindButtonClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FindForm: TFindForm;

implementation

{$R *.dfm}
uses Unit1;

procedure TFindForm.Button1Click(Sender: TObject);
begin
  Close;
end;

procedure TFindForm.FindButtonClick(Sender: TObject);
var c: integer;
    lastName: string[22];
    z: rec;
begin
   c:=1;
   lastName := LastNameInput.text;
   while not eof(f) do
      begin
        read(f,z);
        if lastName=z.fam then
           begin
              c:=0;
              edit2.text:=z.name;
              edit3.text:=z.fon;
              edit4.text:=z.adr;
              break;
           end;
      end;
   if c<>0 then
      begin
         edit3.text:='Нет данных';
      end;
   reset(f);
   end;


end.
